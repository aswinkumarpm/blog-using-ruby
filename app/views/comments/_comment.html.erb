<div class="box">
	<article class="media">
		<div class="media-content">
			<div class="content">

				<p>
					<strong><%= comment.name %></strong>
					<%= comment.comment %>
				</p>
				
			</div>
		</div>

		<%= link_to "Show", [comment.article, comment], class: "btn btn-xs btn-primary" %> 

		<% unless current_user == nil %>
  <% if current_user.id == @article.user_id %>
		
		<%= link_to "Edit Comment", edit_article_comment_path(comment.article, comment) , class:"btn btn-xs btn-success" %>

		<%= link_to "Delete",[comment.article, comment], method: :delete, data: { confirm: "Are you sure you want to delete this comment?"}, class: "btn btn-xs btn-danger" %>
  <% end %>
<% end %>



		


	</article>

</div>